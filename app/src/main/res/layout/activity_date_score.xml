<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/greenblack"
    tools:context="com.lionelnkeoua.com.bwala.view.fragment.youlou.DateScoreActivity">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/text_current_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="21sp"
                            android:textColor="#000"
                            android:text="Votre score actuel est :"/>

                        <TextView
                            android:id="@+id/current_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="21sp"
                            android:layout_toRightOf="@+id/text_current_score"/>

                        <TextView
                            android:id="@+id/text_high_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Votre meilleur score est :"
                            android:layout_margin="10dp"
                            android:textSize="21sp"
                            android:textColor="#000"
                            android:layout_below="@+id/text_current_score"/>


                        <TextView
                            android:id="@+id/high_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="21sp"
                            android:layout_toRightOf="@+id/text_high_score"
                            android:layout_below="@+id/text_current_score"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="8dp">

                        <Button
                            android:id="@+id/btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="recommencer"
                            android:background="@drawable/oval"/>

                        <Button
                            android:id="@+id/btn_quitte"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quitter"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/radius_right"
                            />

                    </LinearLayout>

                </LinearLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>

