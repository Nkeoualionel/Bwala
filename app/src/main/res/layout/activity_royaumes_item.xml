<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/royaume_parent"
    android:background="#E0E0E0"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/royaume_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/title_royaume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/title_size"
                android:textStyle="italic"
                android:layout_below="@id/royaume_image"/>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bec8ce"
                android:layout_below="@+id/title_royaume"/>


            <TextView
                android:id="@+id/desc_royaume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/description_size"
                android:textStyle="bold"
                android:maxLines="4"
                android:layout_below="@+id/line"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>